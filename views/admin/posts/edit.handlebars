<H1>Edit Posts</H1>

<!-- Use put request for Update.. -->
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" placeholder="Enter Title" class="form-control"
            value="{{post.title}}">
    </div>

    <div class="form-group">
        <label for="profileimage">Upload File:</label>
        <input type="file" name="profileimage" id="profileimage" value="/uploads/{{post.image}}" class="form-control">
    </div>

    <div class="form-group">
        <label for="status">Status:</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>

    <div class="checkbox">
        <label class="" for="allowComments"><input type="checkbox" {{#if post.allowComments}}checked="checked" {{/if}}
                name="allowComments" id="allowComments">
            Allow
            Comments</label>
    </div>

    <div class="form-group">
        <label for="body">Body:</label>
        <textarea class="form-control" rows="7" id="body" name="body"
            placeholder="Enter Description">{{post.body}}</textarea>
    </div>

    <input type="submit" class="btn btn-primary" value="Update Post" id="">
</form>